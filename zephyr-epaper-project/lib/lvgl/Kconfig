# LVGL Library Configuration
#
# Copyright (c) 2025
# SPDX-License-Identifier: Apache-2.0

menuconfig LVGL
	bool "LVGL - Light and Versatile Graphics Library"
	help
	  Enable LVGL graphics library support.
	  This is a manual integration of the latest LVGL library.

if LVGL

config LVGL_COLOR_DEPTH
	int "Color depth (bits per pixel)"
	default 1
	help
	  Color depth for LVGL. For e-Paper displays, use 1-bit.

config LVGL_DPI
	int "Dots per inch"
	default 128
	help
	  Dots per inch of the display.

config LVGL_HOR_RES
	int "Horizontal resolution"
	default 128
	help
	  Horizontal resolution of the display.

config LVGL_VER_RES
	int "Vertical resolution"
	default 296
	help
	  Vertical resolution of the display.

config LVGL_DISPLAY_BUFFER_SIZE
	int "Display buffer size in pixels"
	default 4736
	help
	  Size of the LVGL display buffer in pixels.
	  For 128x296 e-Paper: (128 * 296) / 8 = 4736 bytes

endif # LVGL
